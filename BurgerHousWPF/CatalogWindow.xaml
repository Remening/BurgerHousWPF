            </Grid>
            <Grid x:Name="basketGrid" Grid.ColumnSpan="5" Grid.RowSpan="2" Visibility="Collapsed" d:IsHidden="True">
                <Button Grid.Column="0" Grid.Row="0" x:Name="basketBtn" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="0,0,446,109"/>
                <Button Grid.Row="0" x:Name="basketBtn1" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="112,0,335,109"/>
                <Button Grid.Row="0" x:Name="basketBtn2" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="223,0,223,109"/>
                <Button Grid.Row="0" x:Name="basketBtn3" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="335,0,112,109"/>
                <Button Grid.Row="0" x:Name="basketBtn4" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="446,0,0,109"/>
                <Button Grid.Column="0" x:Name="basketBtn5" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="0,108,446,0"/>
                <Button x:Name="basketBtn6" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="112,108,335,0"/>
                <Button x:Name="basketBtn7" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="223,108,223,0"/>
                <Button x:Name="basketBtn8" Content="" Background="#FF530FAD" BorderBrush="{x:Null}" Foreground="White" Margin="335,108,112,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
